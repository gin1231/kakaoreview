<div id = "loginScreen">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

		<div id = "idForm">
			<%= f.text_field :username, :placeholder => "아이디" %>
		</div>
		<div id = "passwordForm">
			<%= f.password_field :password, :placeholder => "패스워드" %>
		</div>

		<% if devise_mapping.rememberable? -%>
			<div id = "rememberMe">
				<%= f.check_box :remember_me %> <%= f.label "아이디 / 비밀번호 저장" %>
			</div>
		<% end -%>

		<div id = "loginButton">
			<%= f.submit "로그인" %>
		</div>
	<% end %>
	<%= render "devise/shared/links" %>
</div>
