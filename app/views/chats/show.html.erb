<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <div class = 'chatTitle'>
    <span id = 'chatTitleText'><%= @chat.title %></span>
    <%= link_to_function 'Edit', 'toggleTitle()' %>
  </div>
  <div class = 'chatTitle transparent'>
    <%= form_for(@chat, :remote => true) do |c| %>
      <%= c.text_field :title %>
      <%= c.submit '수정' %>
    <% end %>
  </div>
</p>

<div class = 'chatScreen'>
	<div class = 'chat_list'>
    <%= html_maker(@chat.messages).html_safe %>
	</div>
</div>

<%= link_to_function 'Share', 'toggleRadio();' %> |
<%= link_to 'Back', chats_path %>

<br>
<%= link_to_function 'Shart Part!', "newPart('#{new_chat_part_path(:chat_id => @chat)}')" %>
