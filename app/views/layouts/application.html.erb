<!DOCTYPE html>
<html>
<head>
  <title>Kakaoreview</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">

    <!-- Navigation bar -->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <%= link_to 'Kakao Review for 잉여=너', root_path, :class => "brand" %>
        <ul class="nav">
            <li><%= link_to 'Quotes', quotes_path %></li>
            <li><%= link_to 'My Chat', chats_path %></li>
            <li><%= link_to 'Help', help_path %></li>
        </ul>
        <ul class="nav">
          <% if user_signed_in? %>
            <li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
          <% else %>
            <li><%= link_to 'Sign up', new_user_registration_path %></li>
            <li><%= link_to 'Login', new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <!-- Navigation bar end -->

    <div class="row-fluid">
      <div class="span2">
        <!-- Sidebar contents -->
        <%= yield :sidebar %>
      </div>
      <div id="content_box" class="span10">
        <!-- Contents -->
        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>
