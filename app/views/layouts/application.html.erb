<!DOCTYPE html>
<html>
<head>
  <title>Kakaoreview</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">

    <!-- Navigation bar -->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <%= link_to 'Kakao Review for 잉여=너', root_path, :class => "brand" %>
        <ul class="nav">
          <li><%= link_to 'Sign up', '#' %></li>
          <li><%= link_to 'Login', '#' %></li>
        </ul>
      </div>
    </div>
    <!-- Navigation bar end -->

    <div class="row-fluid">
      <div class="span2">
        <!-- Sidebar contents -->
        <%= yield :sidebar %>
      </div>
      <div class="span10">
        <!-- Contents -->
        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>
